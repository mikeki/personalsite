<!--[if IE 7 ]>    <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{name}}</title>
    <link rel="shortcut icon" href="{{favicon_url}}" />
    <meta name="description" content="{{name}}{{#description}} is a {{description}}{{/description}}{{#location}} living in {{location}}{{/location}}" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
    <meta property="twitter:account_id" content="{{twitter_id}}" />

    <!-- build:script inline google-analytics -->
    <!--<script src="/js/google-analytics.js"></script>-->
    <!-- /build -->

    <link href='https://fonts.googleapis.com/css?family=Raleway:300,400,500' rel='stylesheet' type='text/css'>
    <script src="https://use.fontawesome.com/e46d01e63a.js"></script>

    <!-- build:style inline main -->
    <link href="/css/main.css" rel="stylesheet" type="text/css">
    <!-- /build -->
    {{#banner_url}}
        <style>
            body:before {
              background: #040409 url({{banner_url}}) no-repeat center center fixed;
              background-size: cover;
            }
        </style>
    {{/banner_url}}
</head>
<body>
<div id="container">
    <article id="about" class="vcard">
        <header>
            <img class="photo" src="{{avatar_url}}"/>
            <a href="#" rel="me" class="fn url">
                <h1>{{name}}</h1>
            </a>
            <div id="details">
                {{#description}}
                    <div class="title">{{description}}</div><br />
                {{/description}}
                {{#location}}
                    <div class="locality">{{location}}</div>
                {{/location}}
            </div>
        </header>
        <section id="contact">
            <ul>
                {{#email}}
                    <li>
                        <a href="mailto:{{email}}" title="Email" rel="me">
                            <i class="fa fa-envelope-o"></i>
                        </a>
                    </li>
                {{/email}}
                <li>
                    <a href="http://twitter.com/{{twitter}}" title="Twitter" rel="me">
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                {{#github}}
                    <li>
                        <a href="http://github.com/{{github}}" title="Github" rel="me">
                            <i class="fa fa-github"></i>
                        </a>
                    </li>
                {{/github}}
                {{#facebook}}
                    <li>
                        <a href="http://facebook.com/{{facebook}}" title="Facebook" rel="me">
                            <i class="fa fa-facebook"></i>
                        </a>
                    </li>
                {{/facebook}}
                {{#linked_in}}
                    <li>
                        <a href="http://linkedin.com/in/{{linked_in}}" title="LinkedIn" rel="me">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    </li>
                {{/linked_in}}
            </ul>
        </section>
    </article>
</div>
</body>
</html>